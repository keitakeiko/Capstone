  <div class="container-fluid">
    <div class="row px-5">
      <div class="col-md-10">
        <form action="/users/{{ id }}/editTeacherPage?_method=PUT" method="POST">
          <div class="col-4 mb-4">
            <h5 class="my-2"><b>{{ name }}</b></h5>
            <input type="text" class="form-control" placeholder="Name">
          </div>
          <div class="col-4 mb-4">
            <h5 class="my-2"><b>{{ nation }}</b></h5>
            <input type="text" class="form-control" placeholder="Nation english name">
          </div>
          
          <h5 class="my-2"><b>{{ introduction }}</b></h5>
          <div class="mb-4">
            <input type="text" class="form-control" placeholder="Text">
          </div>
          
          <h5 class="my-2"><b>{{ teachingStyle }}</b></h5>
          <div class="mb-4">
            <input type="text" class="form-control" placeholder="Text">
          </div>
          
          {{!-- 30 / 60 minutes class duration --}}
          <h5 class="my-2"><b>{{ availableTime }}</b></h5>
          <div class="mb-4">
            <input type="number" class="form-control" placeholder="Number">
          </div>
          
          <h5 class="my-2"><b>{{ classUrl }}</b></h5>
          <div class="mb-4">
            <input type="url" class="form-control" placeholder="url">
          </div>
          
          <h5 class="my-2"><b>開放預約</b></h5>
          <div class="d-flex">
            <div class="mb-4 me-3">
              <input type="checkbox" id="Mon" name="Mon.">
              <label for="Mon">Mon.</label>
            </div>
            <div class="mb-4 me-3">
              <input type="checkbox" id="Tue" name="Tue.">
              <label for="Tue">Tue.</label>
            </div>
            <div class="mb-4 me-3">
              <input type="checkbox" id="Wed" name="Wed.">
              <label for="Wed">Wed.</label>
            </div>
            <div class="mb-4 me-3">
              <input type="checkbox" id="Thur" name="Thur.">
              <label for="Thur">Thur.</label>
            </div>
            <div class="mb-4 me-3">
              <input type="checkbox" id="Fri" name="Fri.">
              <label for="Fri">Fri.</label>
            </div>
            <div class="mb-4 me-3">
              <input type="checkbox" id="Sat" name="Sat.">
              <label for="Sat">Sat.</label>
            </div>
            <div class="mb-4 me-3">
              <input type="checkbox" id="Sun" name="Sun.">
              <label for="Sun">Sun.</label>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-outline-success">Submit</button>
            </div>
            <div class="text-center">
              <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</form>
