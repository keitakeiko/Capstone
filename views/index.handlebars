<div class="row ms-2 my-2 justify-content-between">
  <div class="col-sm-10">

    <form class="d-flex mb-3">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>

    {{#each users}}
    <div class="row row-cols-sm-3 ">
      <div class="col mb-3">
        <div class="card d-flex flex-column">

          <div class="d-flex align-items-center justify-content-between">
            <div class="col-6">
              <div class="square-image">
                <img
                  src="{{ this.avatar }}"
                  class="card-img-top" alt="..." width="100%" height="auto">
              </div>
            </div>
            <div class="col-6">
              <div class="info d-flex flex-column align-items-center">
                <h5 class="text-center"><b>{{ this.name }}</b></h5>
                <h6 class="text-center">{{ this.nation }}</h6>
              </div>
            </div>
          </div>
          
          <div class="card-body">
            <h6 class="card-text">{{ this.teachingStyle }}</h6>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

  <div class="col-sm-2 hidden-xs ">
    <h5>學習時數總排行榜</h5>
    <div class="d-flex flex-column">
      {{#each ranking}}
      <div class="mb-3">
        <div class="d-flex">
          <div class="col-5">
            <img
              src="{{ this.avatar }}"
              alt="" width="100%" height="100%">
          </div>
          <div class="col-7 d-flex align-items-center">
            <div class="ms-1">
              <h6 class="text-center">
                No.${{ this.ranking }} {{ this.name }}
              </h6>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

</div>