<div class="row mt-6 mx-5 d-flex justify-content-center">
  <div class="col-sm-6">
    <h3 class="text-center"><b> Sign In</b></h3>
    <form action="/signin" method="POST" class="my-5">

      <input type="email" class="form-control my-3" id="email" name="email" placeholder="Email" value="{{email}}"
        required>

      <input type="password" class="form-control my-3" id="password" name="password" placeholder="Password"
        value="{{password}}" required>

      <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-outline-success mt-4">Sign In</button>
      </div>
    </form>

    <div class="text-center">
      <p><a href="/signup">Sign Up</a></p>
    </div>

    <div class="text-center mt-3">
      <a href="">Or Sign in with Google</a>
    </div>
  </div>
</div>