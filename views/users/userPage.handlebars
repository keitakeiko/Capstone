<div class="row mx-3 my-3">
  <div class="col-3 d-flex flex-column">
    <img src="{{ avatar }}" alt="">
    <br>
    <h3><b>{{ name }}</b></h4>
      <br>
      <br>
      <h6>{{ nation }}</h6>
      <br>
      <h6>About Me</h6>
      <h6>
        {{ aboutMe }}
      </h6>
      <br>
      <button type="button" class="btn btn-success">Edit</button>
  </div>

  <div class="col-9 px-5 d-flex flex-column">

    <h5 class="my-3"><b>New Schedule</b></h5>
    <div class="row d-flex my-2 justify-content-center">
      {{#each class}}
      <div class="col-sm-6 col-xs-12">
        <div class="card" style="width: 100%;">
          <div class="card-body">
            <p class="card-text">Time: {{ this.time }}</p>
            <p class="card-text">Teacher's Name: {{ this.teacherName }}</p>
            <p class="card-text">Session Link: {{ this.url }}</p>
          </div>
        </div>
      </div>
      {{/each}}


      <h5 class="my-3 pt-2"><b>Lesson History</b></h5>
      <div class="row">
        {{#each class}}
        <div class="col-sm-6 col-xs-12 mb-3">
          <div class="card" style="width: 100%;">
            <div class="card-body d-flex">
              <div class="col-sm-2 col-xs-3">
                <img src="{{ this.avatar }}" alt="" width="100%" height="100%">
              </div>
              <div class="col-sm-10 col-xs-9 mx-3 d-flex justify-content-between align-items-center">
                <!-- 更改列宽以适应内容 -->
                <h5 class="card-text text-center d-inline-flex">{{ this.teacherName }}</h5>
                <a href="/users/:id/comments" style="background-color:mediumaquamarine" class="m-3">Score</a>
              </div>
            </div>
          </div>
        </div>
        {{/each}}

        <h5 class="my-3"><b>我的學習名次</b></h5>
        <div class="col-sm-6">
          <div class="card" style="width: 100%;">
            <div class="card-body d-flex">
              <div class="col-sm-10 col-xs-9 mx-3">
                <h6 class="card-text text-center d-inline-flex">{{ ranking }}</h6>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



