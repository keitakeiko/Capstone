<form action="/users/{{ user.id }}/comments?enrollmentId={{ enrollmentId }}" method="POST">
  <div class="row m-5 d-flex justify-content-center">
    <div class="col-sm-6">
      <h3 class="text-center"><b>分享本次課程體驗</b></h3>
      <h5>Time: {{record.time}}</h5>
      <h5 class="mt-3">Teacher's Name: {{record.Class.User.name}}</h5>
      {{!-- <div class="m-5 mt-5">
        <select id="appointmentTime" name="appointmentTime" class="form-select">
          <option disabled selected>Time</option>
        </select>
      </div> --}}
      <div class="m-5">
        <input type="text" class="form-control" name="studentComment" id="comment" placeholder="Comments">
      </div>
      <div class="mt-5">
        <input type="number" step="0.1" name="rating" class="form-control" id="rating" placeholder="Rating, e.g. 4.8"
          required>
        <div id="error-message" style="color: red;"></div>
      </div>
      <div class="text-center my-3">
        <button type="submit" class="btn btn-outline-success">Submit</button>
      </div>
      <div class="text-center my-3">
        <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
      </div>
    </div>
  </div>
</form>

<script>
  // 檢查 ratind 是否介於 1.0 ~ 5.0 間
  const ratingInput = document.getElementById('rating')
  const errorMessage = document.getElementById('error-message')

  ratingInput.addEventListener('blur', function () {
    const value = ratingInput.value

    if (value < 1 || value > 5) {
      errorMessage.textContent = '請輸入 1.0 ~ 5.0 間的數字'
      ratingInput.value = ''
    } else {
      errorMessage.extContent = ''
    }
  })
</script>