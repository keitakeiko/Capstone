<div class="row mt-6 mx-5 d-flex justify-content-center">
  <div class="col-sm-6">
    <h3 class="text-center"><b> Sign Up</b></h3>
    <div class="m-5">
      <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Email" value="{{email}}" required>
    </div>
    <div class="m-5">
      <input type="password" class="form-control" id="exampleFormControlInput1" placeholder="Password" value="{{password}}" required>
    </div>
    <div class="m-5">
      <input type="password" class="form-control" id="exampleFormControlInput1" placeholder="Confirm Password" value="{{checkPassword}}" required>
    </div>

    <div class="text-center">
      <a href="">Or Sign up with Google</a>
    </div>
    
    <div class="text-center">
      <a href="/users/:id/class">
        <button type="button" class="btn btn- reserve btn-outline-success">Submit</button>
      </a>
    </div>


  </div>
</div>